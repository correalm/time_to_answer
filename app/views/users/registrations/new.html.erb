<div>
  <a class="hiddenanchor" id="signup"></a>
  <a class="hiddenanchor" id="signin"></a>

  <div class="login_wrapper">

      <section class="login_content">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <h1>Cadastrar usuário</h1>
          <div class="form-control">
            <%= f.email_field :email, autofocus: true, placeholder:"Email" %>
          </div>
          <div class="form-control">
            <%= f.password_field :password, placeholder:"Senha" %>
          </div>
          <div class="form-control">
            <%= f.password_field :password_confirmation, placeholder:"Confirme sua senha" %>
          </div>
          <div class="separator"></div>
          
          <% if devise_mapping.rememberable? %>
            <div class="change_link">
              <%= f.check_box :remember_me, class:"to_register" %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="separator"></div>
          <div style="display: flex;justify-content: center;">
            <%= f.submit "Cadastrar-se", class:"btn btn-primary" %>  
          </div>
        <% end %>  
        <%= render "users/shared/error_messages", resource: resource %>

      </section>
    <div style="text-align:center;">
      <h1>Time to Answer! ✔️</h1>
      <p>©2022 All Rights Reserved</p>
    </div>
</div>