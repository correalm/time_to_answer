<div class="jumbotron">
  <h3>
    <%= @test.name %>
    <% if @user.test_ids.include?(@test.id) %>
    <hr>
      <h4>Nota: <%= @grades[@test.id].round() %> </h4>
      <h4>Realizado em: <%= l(@dates[@test.id], format: :short) %> </h4>
    <% end %>
  </h3>
</div>

<% @test.questions.each do |question| %>
      <div class="card">
        <h5 class="card-header">
          Quest√£o
          <%= question.id  %> 
        </h5>
        <div class="card-body">
          <h5 class="card-title"><%= sanitize question.description %></h5>
          <ul style="list-style:none;">
           <div class="nested-fields">
              <br>
              <% question.answers.each do |answer| %>
                <%= radio_button_tag "form_questions[#{question.id}][]", answer.id, (@user_questions_answers.values.include?(answer.id)), disabled: true %>
                <%=h sanitize answer.description %><br />
              <% end %>
            </div>              
              <hr>
          </ul>
        </div>
      </div>
<% end %>
<br>
<%= link_to 'Voltar para provas', users_backoffice_tests_path, class:"btn btn-primary" %>