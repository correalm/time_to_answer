<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Prova</th>
      <th scope="col">Respondida em</th>
      <th scope="col">Nota</th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <th scope="row"> <%= test.id  %></th>
      <td>
        <% if @user.test_ids.include?(test.id) %>
          <%= link_to test.name, "/users_backoffice/tests/#{test.id}/show", class:'btn btn btn-warning' %>  
        <% else %>
          <%= link_to test.name, users_backoffice_path(test.id), class:'btn btn-primary' %>
        <% end %>
      </td>
      <td>
        <% if @times.keys.include?(test.id) %>
          <%= l @times[test.id] %>
        <% else %>
          -
        <% end %>
      </td>
      <td>
        <% if @grades.keys.include?(test.id) %>
          <%= @grades[test.id].round() %>
        <% else %>
          -
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

