<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Prova</th>
      <th scope="col">Respondida em</th>
      <th scope="col">Nota</th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <th scope="row"> <%= test.id  %></th>
      <% if current_user.test_ids.include?(test.id) %>
        <% current_user.user_tests.each do |user_test|%>
        <% if user_test.test_id == test.id %>
        <td>
          <%= link_to test.name, users_backoffice_test_user_test_path(id: test.id, test_id: user_test.id), class:'btn btn btn-warning' %>
        </td> 
        <td>
          <%= l(user_test.created_at, format: :short) %>
        </td>
        <td>
          <%= user_test.grade.round() %>
        </td>
        <% end %>
      <% end %>
      <% else %>
      <td>
        <%= link_to test.name, new_users_backoffice_test_user_test_path(test.id), class:'btn btn-primary' %>
      </td>
      <td>
        -
      </td>
      <td>
        -
      </td>
      <% end %>

    </tr>
    <% end %>
  </tbody>
</table>

