<h1>Provas cadastradas</h1>
<hr>



<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Prova</th>
      <th scope="col">Data</th>
      <th scope="col">
        <%= link_to new_admins_backoffice_test_path do %>
          Nova Prova
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @tests.each do |test| %>
      <th scope="row"> <%= test.id  %></th>
      <td><%= test.name %></td>
      <td><%= l test.created_at %></td>
      <td style="width: fit-content">
        <%= link_to edit_admins_backoffice_test_path(test), class: "btn btn-primary btn-sm" do %>
          Editar
        <% end %>
        <%= link_to admins_backoffice_test_path(test), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Deseja excluir a prova?"} do %>
          Apagar Prova
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>


